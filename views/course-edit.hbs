<h1>Редактировать курс {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field col s6">
        <input value="{{course.title}}" name="title" placeholder="Название курса" id="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите Название"></span>
    </div>
    <div class="input-field col s6">
        <input value="{{course.price}}" name="price" min="1" placeholder="Цена" id="price" type="number" class="validate" required>
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field col s6">
        <input value="{{course.img}}" name="img" placeholder="Картинка" id="img" type="text" class="validate">
        <label for="img">First Name</label>
        <span class="helper-text" data-error="Введите URL картинки"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn red">Delete course</button>
</form>
