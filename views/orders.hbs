<h1>My Orders</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s12 ">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Order
                        </span>
                        <p class="date">{{date}}</p>
                        <p><em>{{user.userId.name}}</em>({{user.userId.email}})</p>
                        <ol>
                            {{#each courses}}
                                <li>
                                    {{course.title}} <span>(x{{count}})</span>
                                </li>
                            {{/each}}
                        </ol>
                        <hr>

                        <p>Price: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>You dont have orders</p>
{{/if}}