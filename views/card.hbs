<h1>{{title}}</h1>

{{#if courses.length}}
    <div class="custom-card">
        <table>
            <thead>
            <tr>
                <th>Course title</th>
                <th>Count</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>{{price}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <p><strong>Price:</strong> <span class="price">{{price}}</span></p>
    </div>

{{else}}
    <p>Корзина пуста</p>
{{/if}}
