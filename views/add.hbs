<h1>Добавить курс</h1>

<form action="/add" method="POST">
    <div class="input-field col s6">
        <input name="title" placeholder="Название курса" id="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите Название"></span>
    </div>
    <div class="input-field col s6">
        <input name="price" min="1" placeholder="Цена" id="price" type="number" class="validate" required>
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field col s6">
        <input name="img" placeholder="Картинка" id="img" type="text" class="validate">
        <label for="img">First Name</label>
        <span class="helper-text" data-error="Введите URL картинки"></span>
    </div>
    <button class="btn btn-primary">Добавить курс</button>
</form>
